import java.util.ArrayList;
public class Solution
{
    public static int maximumOnesRow(ArrayList<ArrayList<Integer>> matrix, int n, int m)
    {
        //	  Write your code here.
        int idx=-1;
        int maxcount=0;
        for(int i=0;i<n;i++){
            int count=0;
            for(int j=0;j<m;j++){
                count+=matrix.get(i).get(j);
            }
            if(count>maxcount){
                maxcount=count;
                idx=i;
            }
        }
        return idx;
    }
}